{% extends 'layout.njk' %}

{% block content %}

  <div class="card table-container">
    <a href="/students/create">Novo</a>

    <table width="100%">
      <thead>
        <tr>
          <th>Fotinho</th>
          <th>Membro</th>
          <th>Email</th>
          <th>Telefone</th>
          <th>Visualizar</th>
        </tr>
      </thead>

      <tbody>

        {% for student in students %}
          <tr>
            <td>
              <span style="background:url({{student.avatar_url}});"></span>
            </td>
            <td>{{student.name}}</td>
            <td>{{student.email}}</td>
            <td>{{student.cellphone}}</td>
            <td>
              <a href="/students/{{student.id}}">
                Veja mais sobre o Aluno</a>
            </td>
          </tr>
          {%endfor%}
        </tbody>
      </table>
    </div>

  {% endblock content %}